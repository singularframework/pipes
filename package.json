{
  "name": "@singular/pipes",
  "version": "1.0.0-alpha.6",
  "description": "Singular framework pipes module",
  "main": "dist/pipes.js",
  "scripts": {
    "postinstall": "(cd ./node_modules/@singular/common && npm install && npm start && (cd ../validators && npm install && npm start) || echo \"@singular/validators was not built\") || echo \"Post install failed!\"",
    "start": "node ./node_modules/rimraf/bin.js \"./dist\" && ./node_modules/typescript/bin/tsc --build",
    "docs": "node ./node_modules/rimraf/bin.js \"./docs\" && ./node_modules/typedoc/bin/typedoc --out docs src",
    "test": "node ./node_modules/rimraf/bin.js \"./test/dist\" && ./node_modules/typescript/bin/tsc -p test/tsconfig.json && ./node_modules/mocha/bin/mocha ./test/dist/main.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/singularframework/pipes.git"
  },
  "keywords": [
    "singular",
    "backend",
    "framework",
    "express",
    "nodejs",
    "node",
    "typescript",
    "pipes"
  ],
  "author": "Ramtin Soltani <ramtin@chiselpowered.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/singularframework/pipes/issues"
  },
  "homepage": "https://github.com/singularframework/pipes#readme",
  "dependencies": {
    "@singular/common": "github:singularframework/common#v1.0.0-alpha.5",
    "luxon": "^1.25.0",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@singular/validators": "github:singularframework/validators#v1.0.0-alpha.7",
    "@types/chai": "^4.2.12",
    "@types/luxon": "^1.24.4",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.2",
    "@types/source-map-support": "^0.5.3",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "rimraf": "^3.0.2",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  }
}
